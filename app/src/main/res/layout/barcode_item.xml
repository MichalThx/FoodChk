<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="email@instinctcoder.com"
        android:id="@+id/txtBarcode"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtSklad"
        android:text="ten"
        android:textSize="20dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/txtBarcode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="5dip"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/txtSklad">

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtId"
        android:visibility="gone"
        android:text="1"
        android:layout_weight="50" />

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:background="@mipmap/icon_www"

        android:layout_below="@+id/txtId"
        android:layout_toLeftOf="@+id/thumbnail"
        android:layout_toStartOf="@+id/thumbnail" />


</RelativeLayout>